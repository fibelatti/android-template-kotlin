<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhiteOpaque</item>
        <item name="android:colorBackground">@color/colorWhiteOpaque</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="EdgeToEdgeDivider">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:layout_marginTop">@dimen/margin_smaller</item>
        <item name="android:layout_marginBottom">@dimen/margin_smaller</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="Custom.InputLayoutPrimary" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:paddingLeft">@dimen/padding_regular</item>
        <item name="android:paddingRight">@dimen/padding_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="AppButton.Primary" parent="AppButton">
        <item name="android:background">@drawable/selector_button_primary</item>
    </style>

    <style name="ActionTextButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/clickable_area</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">@dimen/padding_regular</item>
        <item name="android:paddingStart">@dimen/padding_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="ActionTextButton.White" parent="ActionTextButton">
        <item name="android:textColor">@color/colorWhiteOpaque</item>
    </style>

    <style name="DismissibleHintDismissButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/hint_dismiss</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="TextPrimary.White" parent="TextPrimary">
        <item name="android:textColor">@color/colorWhiteOpaque</item>
    </style>

    <style name="TextPrimary.Title" parent="TextPrimary">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
